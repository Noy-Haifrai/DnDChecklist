<Window x:Class="WpfApp1.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Прочие броски" Height="350" Width="500" WindowStartupLocation="Manual" Left="500" Top="250">
    <Grid x:Name="grd2" Background="beige">
        <ComboBox x:Name="combohits" HorizontalAlignment="Left" Height="24" Margin="10,54,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="hit" Content="Бросить" HorizontalAlignment="Left" Height="56" Margin="175,96,0,0" VerticalAlignment="Top" Width="138" Click="hit_Click" Background="#BDB76B"/>
        <RadioButton x:Name="crit" Content="Крит" HorizontalAlignment="Left" Height="18" Margin="175,50,0,0" VerticalAlignment="Top" Width="94" Background="#EEE8AA" />
        <RadioButton x:Name="nocrit" Content="Без крита" HorizontalAlignment="Left" Height="18" Margin="175,73,0,0" VerticalAlignment="Top" Width="94" Background="#EEE8AA" />
        <Label x:Name="hit1" Content="Вам выпало число: " HorizontalAlignment="Left" Height="31" Margin="175,169,0,0" VerticalAlignment="Top" Width="138"/>

    </Grid>
</Window>
